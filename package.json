{
  "name": "pipe-ist",
  "version": "0.1.0",
  "description": "pipe-ist is a simple and powerful build system",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "postinstall": "typings install --no-insight",
    "prepublish": "npm run build",
    "test": "ts-node node_modules/blue-tape/bin/blue-tape \"src/**/*.spec.ts\" | tap-spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paked/pipe-ist.git"
  },
  "author": "Harrison Shoebridge <harrison@theshoebridges.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paked/pipe-ist/issues"
  },
  "homepage": "https://github.com/paked/pipe-ist#readme",
  "dependencies": {
    "any-promise": "^1.1.0",
    "rimraf": "^2.5.1",
    "thenify": "^3.2.0",
    "tslint": "^3.3.0",
    "typings": "^0.6.6",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "blue-tape": "^0.2.0",
    "tap-spec": "^4.1.1",
    "ts-node": "^0.5.5",
    "typescript": "^1.7.5"
  }
}
